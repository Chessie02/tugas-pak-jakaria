#include<iostream>

using namespace std;
 int main(){
 	string nama,jabatan;
	 char golongan;
	int gajipokok,tunjangan,pinjaman,pajak,gajikotor,gajibersih;
	
	cout<<"nama pegawai: ";
	getline(cin,nama);
	
	cout<<"golongan(1,2,3,4,5):";
	cin>>golongan;
	
	cout<<"kode jabatan(dir,sek,wak,stf):";
	cin>>jabatan;

	cout<<"pinjaman:";
	cin>>pinjaman;
switch(golongan){
	case'1':
		gajipokok=500000;
		break;
		
	case'2':
		gajipokok=750000;
		break;
	case'3':
		gajipokok=1000000;
		break;
	case'4':
		gajipokok=1500000;
		break;
	case'5':
		gajipokok=1750000;
		break;
		default:
		cout<<"golongan tidak valid."<<endl;
		return 1;	
     
	 }if(jabatan=="dir"){
	 	tunjangan=450000;
	 }else if(jabatan=="sek"){
	 	tunjangan=300000;
	 }else if(jabatan=="wak"){
	 	tunjangan=375000;
	 }else if(jabatan=="stf"){
	 	tunjangan=200000;
	 }else{
	 cout<<"kode jabatan tidak valid."<<endl;
	 return 1;
	 }
	 gajikotor=gajipokok+tunjangan;
	 pajak=0.05*gajikotor;
	 gajibersih=gajikotor-pinjaman-pajak;
	 //menampilkan hasil
	 cout<<"\nrincian gaji"<<endl;
	 cout<<"nama:"<<nama<<endl;
	 cout<<"golongan:"<<golongan<<endl;
	 cout<<"jabatan:"<<jabatan<<endl;
	 cout<<"gaji pokok:Rp"<<gajipokok<<endl;
	 cout<<"tunjangan:Rp"<<tunjangan<<endl;
	 cout<<"pinjaman:Rp"<<pinjaman<<endl;
	 cout<<"pajak(5%):Rp"<<pajak<<endl;
	 cout<<"gaji kotor:Rp"<<gajikotor<<endl;
	 cout<<"gaji bersih:Rp"<<gajibersih<<endl;
	 return 0;
	 
}
